<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="customradio.vj.com.customradioshapes.MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sixteen_dp"
            android:text="Radio Color selector:"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteen_sp" />


        <include layout="@layout/color_selection2" />
        <Button
            android:id="@+id/color_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sixteen_dp"
            android:background="@color/red"
            android:text="Color"
            android:textColor="@color/white" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/eight_dp"
            android:text="Custom Views"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteen_sp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:columnOrderPreserved="false"
            android:padding="@dimen/eight_dp"
            android:rowOrderPreserved="false"
            tools:targetApi="ice_cream_sandwich">


            <customradio.vj.com.library.CustomView
                android:layout_width="@dimen/fifty_six_dp"
                android:layout_height="@dimen/fifty_six_dp"
                android:layout_margin="@dimen/sixteen_dp"
                custom:viewColor="@color/black"
                custom:viewShape="square2" />

            <customradio.vj.com.library.CustomView
                android:layout_width="@dimen/fifty_six_dp"
                android:layout_height="@dimen/fifty_six_dp"
                android:layout_margin="@dimen/sixteen_dp"
                custom:viewColor="@color/tab_unselected_bg"
                custom:viewShape="square" />


            <customradio.vj.com.library.CustomView
                android:layout_width="@dimen/fifty_six_dp"
                android:layout_height="@dimen/fifty_six_dp"
                android:layout_margin="@dimen/sixteen_dp"
                custom:viewColor="@color/green"
                custom:viewShape="rounded_ractangle" />

            <customradio.vj.com.library.CustomView
                android:layout_width="@dimen/fifty_six_dp"
                android:layout_height="@dimen/fifty_six_dp"
                android:layout_margin="@dimen/sixteen_dp"
                custom:viewColor="@color/yellow"
                custom:viewShape="rounded_ractangle2" />


            <customradio.vj.com.library.CustomView
                android:layout_width="@dimen/fifty_six_dp"
                android:layout_height="@dimen/fifty_six_dp"
                android:layout_margin="@dimen/sixteen_dp"
                custom:viewColor="@color/green"
                custom:viewShape="simple_circle2" />

            <customradio.vj.com.library.CustomView
                android:layout_width="@dimen/fifty_six_dp"
                android:layout_height="@dimen/fifty_six_dp"
                android:layout_margin="@dimen/sixteen_dp"
                custom:viewColor="@color/pink"
                custom:viewShape="simple_circle" />


            <customradio.vj.com.library.CustomView
                android:layout_width="@dimen/fifty_six_dp"
                android:layout_height="@dimen/fifty_six_dp"
                android:layout_margin="@dimen/sixteen_dp"
                custom:viewColor="@color/black"
                custom:viewShape="star" />

            <customradio.vj.com.library.CustomView
                android:layout_width="@dimen/fifty_six_dp"
                android:layout_height="@dimen/fifty_six_dp"
                android:layout_margin="@dimen/sixteen_dp"
                custom:strokeWidth="5"
                custom:viewColor="@color/red"
                custom:viewShape="star2" />

            <customradio.vj.com.library.CustomView
                android:layout_width="@dimen/fifty_six_dp"
                android:layout_height="@dimen/fifty_six_dp"
                android:layout_margin="@dimen/sixteen_dp"
                custom:viewColor="@color/tax_color"
                custom:viewShape="triangle" />

            <customradio.vj.com.library.CustomView
                android:layout_width="@dimen/fifty_six_dp"
                android:layout_height="@dimen/fifty_six_dp"
                android:layout_margin="@dimen/sixteen_dp"
                custom:bg_color="@color/line_color"
                custom:star_points="5"
                custom:viewColor="#FFD600"
                custom:viewShape="star_filled" />

            <customradio.vj.com.library.CustomView
                android:layout_width="@dimen/fifty_six_dp"
                android:layout_height="@dimen/fifty_six_dp"
                android:layout_margin="@dimen/sixteen_dp"
                custom:bg_color="@color/white"
                custom:viewColor="#FF1744"
                custom:viewShape="triangle2" />

            <customradio.vj.com.library.CustomView
                android:layout_width="@dimen/fifty_six_dp"
                android:layout_height="@dimen/fifty_six_dp"
                android:layout_margin="@dimen/sixteen_dp"
                custom:viewColor="@color/purple"
                custom:viewShape="heart" />

            <customradio.vj.com.library.CustomView
                android:layout_width="@dimen/fifty_six_dp"
                android:layout_height="@dimen/fifty_six_dp"
                android:layout_margin="@dimen/sixteen_dp"
                custom:viewColor="@color/red"
                custom:viewShape="heart2" />


            <customradio.vj.com.library.CustomView
                android:layout_width="@dimen/fifty_six_dp"
                android:layout_height="@dimen/fifty_six_dp"
                android:layout_margin="@dimen/sixteen_dp"
                custom:viewColor="#00897B"
                custom:viewShape="rhombus1" />

            <customradio.vj.com.library.CustomView
                android:layout_width="@dimen/fifty_six_dp"
                android:layout_height="@dimen/fifty_six_dp"
                android:layout_margin="@dimen/sixteen_dp"
                custom:viewColor="#FF9800"
                custom:viewShape="rhombus2" />

            <customradio.vj.com.library.CustomView
                android:layout_width="@dimen/fifty_six_dp"
                android:layout_height="@dimen/fifty_six_dp"
                android:layout_margin="@dimen/sixteen_dp"
                custom:viewColor="@color/green"
                custom:viewShape="rhombus3" />

            <customradio.vj.com.library.CustomView
                android:layout_width="@dimen/fifty_six_dp"
                android:layout_height="@dimen/fifty_six_dp"
                android:layout_margin="@dimen/sixteen_dp"
                android:background="@color/pink"
                custom:viewColor="@color/calendar_green"
                custom:viewShape="rhombus4" />

            <customradio.vj.com.library.CustomView
                android:layout_width="@dimen/fifty_six_dp"
                android:layout_height="@dimen/fifty_six_dp"
                android:layout_margin="@dimen/sixteen_dp"
                custom:viewColor="#3E2723"
                custom:viewShape="ring" />

        </GridLayout>

    </LinearLayout>
</ScrollView>
